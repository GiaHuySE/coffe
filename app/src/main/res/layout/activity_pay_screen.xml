<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFF">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="HÓA ĐƠN"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Table and Bill ID -->
    <LinearLayout
        android:id="@+id/llTableBillId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Bàn: Bàn A2"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#Bill ID: 949"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Order and Payment Buttons -->
    <LinearLayout
        android:id="@+id/llOrderPayment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/llTableBillId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GỌI MÓN"
                android:background="#03A9F4"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/txtUserInandTimeIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10\nNguyễn Tấn Lương\n09/12/2019 17:58:37"
                android:textSize="14sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="THANH TOÁN"
                android:background="#03A9F4"
                android:textColor="#FFF" />

            <TextView
                android:id="@+id/txtUserOutandTimeOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="53\nTrần Thanh Tâm\n11/12/2019 00:18:35"
                android:textSize="14sp"
                android:paddingTop="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bill Details Header -->
    <TextView
        android:id="@+id/tvBillDetailsHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFA000"
        android:padding="8dp"
        android:text="CHI TIẾT HÓA ĐƠN"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/llOrderPayment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Summary Row -->
    <LinearLayout
        android:id="@+id/llSummaryRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvBillDetailsHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tên"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Số Lượng"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Giá"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tổng"
            android:textSize="16sp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Bill Items RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBillItems"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#E0F7FA"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/llSummaryRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/llTotalAmount" />

    <!-- Total Amount -->
    <LinearLayout
        android:id="@+id/llTotalAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#4CAF50"
        android:padding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btnPay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/totalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TỔNG: 54,000"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Pay Button -->
    <Button
        android:id="@+id/btnPay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tính tiền"
        android:textColor="#FFF"
        android:padding="12dp"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:text="Back"
    android:textColor="#FFF"
    android:padding="12dp" android:backgroundTint="@color/colorPrimary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
